---
import Layout from "../layouts/Layout.astro";

const message = "Una aguja en un pajar, es difícil de encontrar";
const meaning =
    "Inutilidad de trabajar por conseguir algo imposible o muy difícil";
---

<Layout title="Refranero Popular Español">
<main class="container max-w-3xl mx-auto">
    <h1 class="font-sans font-black text-center my-8 text-stone-300 text-9xl">
        404
    </h1>

    <h2
        class="text-center text-2xl font-serif text-stone-600 font-medium max-md:mx-6"
    >
        <svg
            class="max-md:hidden inline w-10 h-10 text-stone-300/80 mx-4 rotate-180"
            aria-hidden="true"
            fill="currentColor"
            viewBox="0 0 18 14"
        >
            <path
                d="M6 0H2a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3H2a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Zm10 0h-4a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3h-1a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Z"
            ></path>
        </svg>
        {message}
        <svg
            class="max-md:hidden inline w-10 h-10 text-stone-300/80 ml-4"
            aria-hidden="true"
            fill="currentColor"
            viewBox="0 0 18 14"
        >
            <path
                d="M6 0H2a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3H2a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Zm10 0h-4a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3h-1a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Z"
            ></path>
        </svg>
    </h2>

    <p class="text-lg font-serif text-stone-400 text-center my-4">
        {meaning}
    </p>
</main>
</Layout>
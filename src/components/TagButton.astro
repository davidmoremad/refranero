---
const { href, text, subtext, theme } = Astro.props;
const themeClasses = {
    light:   "bg-stone-200 text-stone-600 border-stone-400/20 focus:bg-stone-400",
    neutral: "bg-stone-300 text-stone-900 border-stone-400/20 focus:bg-stone-400",
    dark:    "bg-stone-700 text-stone-200 border-stone-800/20 focus:bg-stone-800",
};
---

<a
    href={href}
    type="button"
    class={`font-sans border hover:scale-110 duration-150 focus:outline-none font-medium rounded-full text-xs px-3 py-1.5 text-center ${
        themeClasses[theme] || themeClasses["neutral"]
    }}`}
>
    <span class="text-stone-400">#&nbsp;</span>
    <slot>{text}</slot>
    {
        subtext && (
            <span class="ml-2 border-l-2 pl-1.5 border-stone-400 text-stone-400">
                {subtext}
            </span>
        )
    }
</a>
